# Environment Variables Configuration for Even/Odd League Player Agent
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# API Keys (NEVER commit actual keys!)
# =============================================================================

# Google Gemini API Key (FREE TIER AVAILABLE)
# Get your key from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_gemini_api_key_here

# =============================================================================
# Player Agent Configuration
# =============================================================================

# Player Identity
PLAYER_ID=P01
PLAYER_DISPLAY_NAME="Gemini Agent"

# Strategy Mode: random, llm, hybrid
# - random: Simple random.choice(["even", "odd"]) - fast and reliable
# - llm: Use Gemini LLM for all decisions - interesting but slower
# - hybrid: Random by default, LLM with timeout fallback (RECOMMENDED)
STRATEGY_MODE=hybrid

# =============================================================================
# League Configuration
# =============================================================================

# League Manager Connection
LEAGUE_MANAGER_HOST=localhost
LEAGUE_MANAGER_PORT=8000

# Player Agent Server
PLAYER_AGENT_PORT=8101  # Can be 8101-8104

# =============================================================================
# Logging Configuration
# =============================================================================

ENVIRONMENT=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# =============================================================================
# Paths (relative to project root)
# =============================================================================

DATA_DIR=./data
RESULTS_DIR=./results
CONFIG_DIR=./config
LOGS_DIR=./logs

# =============================================================================
# Advanced Settings (usually don't need to change)
# =============================================================================

# Gemini Model Configuration
GEMINI_MODEL_ID=gemini-2.0-flash-exp  # Free tier model
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=100

# Timeout Settings (in seconds)
INVITATION_TIMEOUT=5
PARITY_CHOICE_TIMEOUT=30
RESULT_NOTIFICATION_TIMEOUT=10

# LLM Strategy Timeout (must be < PARITY_CHOICE_TIMEOUT)
LLM_TIMEOUT=25  # 5 second buffer
